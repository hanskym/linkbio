  <Featured title="Featured">
    <FeaturedItem
      href="https://example.com"
      imageSrc="https://placehold.co/400x400"
      altText="Next.js UI Kit"
      title="Next.js UI Kit"
    />
    <FeaturedItem
      href="https://example.com"
      imageSrc="https://placehold.co/400x400"
      altText="React Dashboard"
      title="React Dashboard"
    />
    <FeaturedItem
      href="https://example.com"
      imageSrc="https://placehold.co/400x400"
      altText="SaaS Landing Page"
      title="SaaS Landing Page"
    />
    <FeaturedItem
      href="https://example.com"
      imageSrc="https://placehold.co/400x400"
      altText="eCommerce Platform"
      title="eCommerce Platform"
    />
  </Featured>

  <Card title="Get in Touch">
    <img
      src="/jakarta-map.png"
      alt="Map of Jakarta"
      class="size-full max-w-full rounded-radius object-cover shadow-md"
    />

    <a
      href="mailto:hansky@example.com"
      target="_blank"
      rel="noopener noreferrer"
      class="relative mt-4 block w-full overflow-hidden rounded-radius bg-background-tile px-6 py-4 text-center text-base font-medium text-text-primary no-underline transition-all duration-300 before:absolute before:top-0 before:left-[-100%] before:size-full before:bg-[linear-gradient(90deg,transparent,var(--accent-shimmer),transparent)] before:transition-all before:duration-500 before:content-[''] hover:-translate-y-0.5 hover:bg-background-hover hover:shadow-lg hover:before:left-[100%]"
    >
      Contact Me
    </a>
  </Card>
