---
import BaseLayout from '@/layouts/BaseLayout.astro';

import Featured from '@/components/Featured.astro';
import Links from '@/components/Links.astro';
import Profile from '@/components/Profile.astro';
import Card from '@/components/ui/Card.astro';
import FeaturedItem from '@/components/ui/FeaturedItem.astro';
import LinkItem from '@/components/ui/LinkItem.astro';
---

<BaseLayout>
  <Profile
    name="Hansky Mulya"
    username="Hansky_Mulya"
    about="Web Developer with a passion for building seamless, interactive, and scalable web applications. Focused on creating clean code and delivering exceptional user experiences. Based in Jakarta, collaborating with clients globally."
    statusText="Available for work"
    statusLink="mailto:hansky@example.com"
    avatarSrc="https://placehold.co/128x128"
    bannerSrc="https://placehold.co/600x240"
    badges={[
      { label: 'verified', colorClass: 'bg-blue-500 text-white' },
      { label: 'pro', colorClass: 'bg-yellow-500 text-white' },
      { label: 'dev', colorClass: 'bg-green-500 text-white' },
    ]}
    stats={[
      { value: '128', label: 'Projects' },
      { value: '3.2K', label: 'Followers' },
      { value: '421', label: 'Following' },
    ]}
  />

  <Links title="My Links">
