---
import { cn } from '@/lib/utils.ts';

interface Props {
  className?: string;
  href: string;
  imageSrc: string;
  altText: string;
  title: string;
}

const { className, href, imageSrc, altText, title } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class={cn(
    'group flex h-full cursor-pointer flex-col overflow-hidden rounded-radius bg-background-card shadow-md transition-transform duration-300 ease-in-out hover:-translate-y-1 hover:shadow-lg',
    className,
  )}
>
  <div class="relative aspect-square shrink-0 overflow-hidden rounded-t-radius">
    <img
      src={imageSrc}
      alt={altText}
      class="size-full object-cover transition-transform duration-400 ease-in-out will-change-transform hover:scale-105"
    />
  </div>
  <div
    class="flex min-h-16 flex-1 items-center justify-center border-t-2 border-border bg-background-tile px-4 py-3 text-center text-sm font-medium text-text-primary transition-colors duration-300 group-hover:bg-background-hover md:text-base"
  >
    {title}
  </div>
</a>
